{
  "name": "create-node-ms",
  "version": "0.0.9",
  "description": "A generator for microservices with Clean Architecture in Node",
  "scripts": {
    "create-node-ms": "node lib/index.js",
    "dev": "yarn dev:prepare && yarn dev:gen",
    "dev:prepare": "mkdir ../create-node-ms-junk",
    "dev:gen": "node -r ts-node/register ./src/index.ts -p ../create-node-ms-junk --verbose",
    "dev:clean": "rm -rf ../create-node-ms-junk",
    "start:help": "node -r ts-node/register ./src/index.ts --help",
    "build": "tsc",
    "release": "yarn build && standard-version -a",
    "format": "prettier --write '**/*.ts'"
  },
  "bin": {
    "create-node-ms": "./lib/index.js"
  },
  "keywords": [
    "clean",
    "node",
    "kubernetes",
    "docker",
    "postgres",
    "generator",
    "cloud"
  ],
  "author": "WandersonAlves <wandersonalvesferreira2012@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/node": "^14.0.14",
    "husky": "^4.2.5",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.0",
    "standard-version": "^8.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "commander": "^5.1.0",
    "winston": "^3.3.3"
  },
  "commitlint": {
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "template-node",
          "core",
          "lib"
        ]
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged"
    }
  }
}
