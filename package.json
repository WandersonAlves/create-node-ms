{
  "name": "create-node-ms",
  "version": "0.1.23",
  "engines": {
    "node": ">=10.22.0"
  },
  "description": "A generator for microservices with Clean Architecture in Node",
  "scripts": {
    "create-node-ms": "node lib/index.js",
    "dev": "yarn dev:prepare && yarn dev:gen",
    "dev:serverless": "yarn dev:prepare && node -r ts-node/register ./src/index.ts node-serverless -p ../create-node-ms-junk -pn test-serverless --verbose",
    "dev:prepare": "yarn dev:clean && mkdir ../create-node-ms-junk",
    "dev:gen": "node -r ts-node/register ./src/index.ts node-ms -p ../create-node-ms-junk --verbose  --projectName test-service -e test",
    "dev:clean": "rm -rf ../create-node-ms-junk",
    "start": "node -r ts-node/register ./src/index.ts",
    "build": "tsc",
    "prerelease": "yarn build",
    "release": "git add ./lib && standard-version -a",
    "format": "prettier --write '**/*.ts'",
    "test:e2e": "docker build --no-cache -t create-node-ms-e2e-test . && docker run create-node-ms-e2e-test"
  },
  "bin": {
    "create-node-ms": "./lib/index.js"
  },
  "keywords": [
    "clean",
    "node",
    "kubernetes",
    "docker",
    "postgres",
    "generator",
    "cloud"
  ],
  "author": "WandersonAlves <wandersonalvesferreira2012@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/fs-extra": "^9.0.1",
    "@types/node": "^14.0.14",
    "husky": "^4.2.5",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.0",
    "standard-version": "^8.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "commander": "^5.1.0",
    "fs-extra": "^9.0.1",
    "winston": "^3.3.3"
  },
  "commitlint": {
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "node",
          "node-serverless",
          "core",
          "lib"
        ]
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged"
    }
  }
}
